@model WebApplication1.Models.UsersInfo
@{
     ViewData["Title"] = "Reset your password";
      <h2 span style = "margin: 15px; margin-left:0">Reset your password</h2>

     @if ( ViewData["Method"] == "Get")
    {
        @using (Html.BeginForm())
        {                 
            <div>
            <b><label asp-for="EMailForReset"></label></b><br />
            <input type="text" asp-for=" EMailForReset" />
            <span asp-validation-for="EMailForReset" />
            </div> <br/>                     
            <div><input span style = "background-color: blue; color:white;" type="submit" value="Send me a code" name="Action"/>
            <input type="submit" value="I have a code" name="Action"/> </div>
        }
    }

    else 
    {      
        @using (Html.BeginForm("Index", "Mockups", FormMethod.Post))
        {                    
            <label><b>Code</b></label><br/> 
            @Html.TextBox("code","", new { type="text"})<br/><br/>           
            <input type="submit" value="Verify" name="Action"/>                      
        }
    }
}
@section scripts{
 
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script type="text/javascript" src="~/lib/jquery-validation/src/localization/messages_ru.js"></script>
}