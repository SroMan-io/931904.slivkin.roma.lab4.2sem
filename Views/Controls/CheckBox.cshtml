@{
    ViewData["Title"] = "Check Box";
    <h2 span style = "margin: 15px; margin-left:0">Check Box</h2>

       @if ( ViewData["Method"] != "Get")
    {       
        <p span style = "margin-left:150px;"><b>IsSelected</b>⠀⠀@ViewData["Text"]</p>    }

    else 
    {      
        @using (Html.BeginForm())
        {                               
            <div>@Html.CheckBox("Enable", false) IsSelected</div>  <br/>       
            <p><input type="submit" value="Submit" name="Action"/> </p>                      
        }
    }
}
