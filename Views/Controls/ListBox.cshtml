@{
    ViewData["Title"] = "List Box";
    <h2 span style = "margin: 15px; margin-left:0">List Box</h2>

    
     @if ( ViewData["Method"] != "Get")
    {       
        <p span style = "margin-left:150px;"><b>Months</b>⠀⠀@ViewData["Text"]</p>       
    }

    else 
    {      
        @using (Html.BeginForm())
        {                    
            <label><b>Months</b></label><br/>  
            @Html.ListBox("month", new MultiSelectList(new string[] { "January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December" }))  <br/><br/>        
            <input type="submit" value="Submit" name="Action"/>                        
        }
    }
}
