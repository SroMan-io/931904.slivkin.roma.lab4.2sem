@{
    ViewData["Title"] = "Text Box";
    <h2 span style = "margin: 15px; margin-left:0">Text Box</h2>

     @if ( ViewData["Method"] != "Get")
    {            
        <p span style = "margin-left:150px;"><b>Text</b>⠀⠀@ViewData["Text"] </p>     
    }

    else 
    {      
        @using (Html.BeginForm())
        {                  
            <label><b>Text</b></label><br/>  
            @Html.TextBox("text","", new { type="text"})<br/><br/>          
            <input type="submit" value="Submit" name="Action"/>                     
        }
    }
}
